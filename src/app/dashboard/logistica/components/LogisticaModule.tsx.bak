      id: Date.now(),
      serial: serialDraft.serial.trim()
    }

    const updated = [...capturedSerials, nextEntry]
    setCapturedSerials(updated)
    setSerialDraft({ serial: '' })

    if (updated.length >= serialModalState.quantity) {
      finalizeSerialCapture(updated)
    }
