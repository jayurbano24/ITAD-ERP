  const updateEditItemQuantity = (cantidad: number) => {
    if (!editItemModal) return

    const nextQuantity = Math.max(1, cantidad)
    const currentSerials = editItemModal.serials
    let nextSerials = currentSerials

    if (nextQuantity > currentSerials.length) {
      const missing = nextQuantity - currentSerials.length
      const additions = Array.from({ length: missing }, (_, idx) => ({
        id: Date.now() + idx,
        serial: ''
      }))
      nextSerials = [...currentSerials, ...additions]
    } else if (nextQuantity < currentSerials.length) {
      nextSerials = currentSerials.slice(0, nextQuantity)
    }

    setEditItemModal({ ...editItemModal, cantidad: nextQuantity, serials: nextSerials })
  }

