      return
    }

    const isEditingExisting = editingBoxId !== null
    const nextBoxNumber = isEditingExisting
      ? currentBox.boxNumber
      : boxes.length > 0
        ? Math.max(...boxes.map((b) => b.boxNumber), 10000) + 1
        : 10001

    // Asegurar que el número sea >= 10001
    const finalBoxNumber = currentBox.boxNumber

    // Validar que tenga un número de caja válido
    if (!finalBoxNumber || finalBoxNumber <= 0) {
      alert('Error: No se ha asignado un número de caja válido.')
      return
    }

    // Validar duplicado solo localmente por seguridad, aunque la API debería darnos uno nuevo
    if (!isEditingExisting && boxes.some(b => b.boxNumber === finalBoxNumber)) {
      alert(`Advertencia: El número #${finalBoxNumber} ya tienes cajas cargadas localmente. Se intentará actualizar.`)
      // No retornamos, permitimos intentar guardar, o podríamos refrescar.
